{
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "rootDirs": ["./", "stories"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "node_modules/react-native-redash/lib/typescript/v1/index.d.ts"
    ],
    "exclude": ["node_modules", "**/*.test.tsx", "**/*.spec.ts"]
}
